extends ../layouts/auth_layout.pug

block content

    .row.justify-content-center
      .col-xl-6.col-lg-12.col-md-9
        .card.o-hidden.border-0.shadow-lg.my-5
          .card-body.p-0
            // Nested Row within Card Body
            .row
              .col-lg-12
                .p-5
                  .text-center
                    h1.h4.text-gray-900.mb-2 Forgot Your Password?
                    p.mb-4
                      | We get it, stuff happens. Just enter your email address below
                      | and we'll send you a link to reset your password!
                  form.user
                    .form-group
                      input#exampleInputEmail.form-control.form-control-user(type='email' aria-describedby='emailHelp' placeholder='Enter Email Address...')
                    button.btn.btn-primary.btn-user.btn-block(href='/login')
                      | Reset Password
                  hr
                  .text-center
                    a.small(href='/register') Create an Account!
                  .text-center
                    a.small(href='/login') Already have an account? Login!
