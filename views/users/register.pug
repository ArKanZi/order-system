extends ../layouts/auth_layout.pug

block content
  .row.justify-content-center
   .col-xl-8.col-lg-12.col-md-9
    .card.o-hidden.border-0.shadow-lg.my-5
      .card-body.p-0
        // Nested Row within Card Body
        .row
          .col-lg-12
            .p-5
              .text-center
                h1.h4.text-gray-900.mb-4 Create an Account!
              form.user(method="POST", action='/create-user')
                .form-group.row
                  .col-sm-6.mb-3.mb-sm-0
                    input#exampleFirstName.form-control.form-control-user(type='text' placeholder='First Name' name='firstName')
                  .col-sm-6
                    input#exampleLastName.form-control.form-control-user(type='text' placeholder='Last Name' name='lastName')
                .form-group
                  input#exampleInputEmail.form-control.form-control-user(type='email' placeholder='Email Address' name='email')
                .form-group.row
                  .col-sm-6.mb-3.mb-sm-0
                    input#exampleInputPassword.form-control.form-control-user(type='password' placeholder='Password' name='password')
                  .col-sm-6
                    input#exampleRepeatPassword.form-control.form-control-user(type='password' placeholder='Repeat Password' name='confirmPassword')
                button.btn.btn-primary.btn-user.btn-block(type='submit')
                  | Register Account
                hr
              .text-center
                a.small(href='/forgotpassword') Forgot Password?
              .text-center
                a.small(href='/login') Already have an account? Login!
